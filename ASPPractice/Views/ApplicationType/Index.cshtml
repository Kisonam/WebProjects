@model IEnumerable<ApplicationType>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Application Type List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp;Create New Application Type
                </a>
            </div>
        </div>
        <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
               <tr>
                    <th>
                         Name
                    </th>
                    <th></th>
               </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-4">
                                    <i class="fas fa-user-edit"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-4">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No application type exists.</p>
    }
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

